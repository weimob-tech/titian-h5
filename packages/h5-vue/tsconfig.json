{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "lib": ["dom", "es2020"],
    "skipLibCheck": true
  },
  "include": ["scripts/rollup.config.ts", "src"],
  "exclude": ["node_modules"]
}

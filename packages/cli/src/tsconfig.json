{
  "extends": "../tsconfig.base.json",
  "exclude": ["**/__tests__"],
  "compilerOptions": {
    // compile away optional-chaining-operator
    // node support table: https://node.green/#ES2020-features-optional-chaining-operator-----
    "target": "ES2019",
    "outDir": "../dist",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}
